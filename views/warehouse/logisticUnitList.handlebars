{{#section 'head'}}
    <link href="/vendor/jquery.dataTables.min.css" rel="stylesheet">
    <link href="/stylesheets/formStyle.css" rel="stylesheet">
{{/section}}
<div class="container main">
    <header class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6">
            <h2 class="title-Detail">{{location}} {{{__ " Stock Management"}}}</h2>
        </div>
        <div class="col-lg-3">

        </div>
    </header>
    <div class="row">
        <div class="col-lg-3">
            <div class="row">
                <div class="col-lg-12">
                    <label class="col-md-2 control-label">{{{__ "Informations: "}}}</label>
                    <br>
                    <br>
                    <ul id="infos" class="info">

                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <label class="col-md-2 control-label">{{{__ "Errors"}}}</label>
                    <br>
                    <br>
                    <ul id="errors" class="error">

                    </ul>
                </div>
            </div>

        </div>
        <div class="col-lg-6 details">
            <table id="logisticUnitsTable" class="table table-bordered table-hover">
                <caption>{{location}} {{{__ "LogisticUnits"}}}</caption>
                <thead>
                <tr>
                    <th>{{{__ "Ident"}}}</th>
                    <th>{{{__ "ProductIdent"}}}</th>
                    <th>{{{__ "UnitSize"}}}</th>
                    <th>{{{__ "PackagingType"}}}</th>
                </tr>
                </thead>
                <tbody>
                {{#each logisticUnits}}
                    <tr id="{{id}}">
                        <td><a href="/warehouse/logisticUnitDetail/:{{id}}">{{ident}}</a></td>
                        <td>{{productIdent}}</td>
                        <td>{{unitSize}}</td>
                        <td>{{packagingType}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-lg-3">
            <button id="newLogisticUnit" class="btn btn-primary">{{{__ "New"}}}</button>
            <button id='deleteLogisticUnit' class="btn btn-danger">{{{__ "Delete"}}}</button>
        </div>
    </div>
</div>
{{#section 'jquery'}}
    <script src="/vendor/jquery.dataTables.min.js"></script>
    <script src="/js/logisticUnits.js"></script>

{{/section}}
