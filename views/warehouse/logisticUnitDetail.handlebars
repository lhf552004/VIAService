{{#section 'head'}}
    <link href="/vendor/jquery.dataTables.min.css" rel="stylesheet">
    <link href="/stylesheets/formStyle.css" rel="stylesheet">
{{/section}}
<div class="container main">

    <input id="receipt" type="text" class="hidden" value="{{receipt}}"/>
    <input id="packingCategory" type="text" class="hidden" value="{{packingCategory}}"/>
    <input id="products" type="text" class="hidden" value="{{products}}"/>
    <input id="companys" type="text" class="hidden" value="{{companys}}"/>
    <header class="row">
        <div class="col-lg-3">
            <label id="error"></label>
        </div>
        <div class="col-lg-6">
            <h2 class="title-Detail">{{location}} {{{__ "Logistic Detail"}}}</h2>
            <a href="/warehouse/logisticUnitList/:{{logisticUnit.location}}">{{logisticUnit.location}} {{{__ "LogisticUnit List"}}}</a>
        </div>
        <div class="col-lg-3">

        </div>
    </header>
    <div class="row">
        <div class="col-lg-3">
            <div class="row">
                <div class="col-lg-12">
                    <label class="col-md-2 control-label">{{{__ "Infomations: "}}}</label>
                    <br>
                    <br>
                    <ul id="infos" class="info">

                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <label class="col-md-2 control-label">{{{__ "Errors"}}}</label>
                    <br>
                    <br>
                    <ul id="errors" class="error">

                    </ul>
                </div>
            </div>

        </div>
        <div class="col-lg-6 details">

            <div class="">
                <ul id="navBar" class="nav nav-pills">
                    <li class="active"><a data-toggle="pill" href="#general">{{{__ "General"}}}</a></li>
                    <li><a data-toggle="pill" href="#layers">{{{__ "Layers"}}}</a></li>
                </ul>

                <div class="tab-content">
                    <div id="general" class="tab-pane fade in active">
                        <div class="row">
                            <form class="form-horizontal" role="form" method="post">
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "Ident"}}}</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="ident" name="ident" disabled
                                               value="{{logisticUnit.ident}}"/>
                                        <input type="text" class="form-control hidden" id="logisticUnitId" name="id"
                                               value="{{logisticUnit.id}}"/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "Name"}}}</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="name" name="name"
                                               value="{{logisticUnit.name}}"/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "Supplier"}}}</label>
                                    <div class="col-md-4">
                                        <input type="text" class="col-md-6 form-control" id="supplierIdent" value = "{{logisticUnit.supplierIdent}}"disabled
                                        />
                                        <input type="text" class="col-md-6 form-control" id="supplierName" value = "{{logisticUnit.supplierName}}" disabled
                                        />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "PackagingType"}}}</label>
                                    <div class="col-md-4">
                                        <input type="text" class="col-md-6 form-control" id="packagingTypeName" value = "{{logisticUnit.packagingTypeName}}" disabled
                                        />
                                        <input type="text" class="col-md-6 form-control hidden" id="packagingType" value = "{{logisticUnit.packagingType}}"
                                        />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "Product"}}}</label>
                                    <div class="col-md-4">
                                        <input type="text" class="col-md-6 form-control" id="productIdent" value = "{{logisticUnit.productIdent}}" disabled
                                        />
                                        <input type="text" class="col-md-6 form-control" id="productName" value = "{{logisticUnit.productName}}" disabled
                                        />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "Lot"}}}</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="lot" name="lot"
                                               value="{{logisticUnit.lot}}" disabled/>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "state"}}}</label>
                                    <div class="col-md-4">
                                        <input type="text" class="col-md-6 form-control" id="displayState" value = "{{logisticUnit.displayState}}" disabled
                                        />
                                        <input type="text" class="form-control hidden" id="state" name="state"
                                               value="{{logisticUnit.state}}"/>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "SSCC"}}}</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="sscc" name="sscc"
                                               value="{{logisticUnit.sscc}}" disabled/>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "Unit Size"}}}</label>
                                    <div class="col-md-4">
                                        <input type="number" class="form-control" id="unitSize" name="unitSize"
                                               value="{{logisticUnit.unitSize}}" disabled/>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "Nb Of Units"}}}</label>
                                    <div class="col-md-4">
                                        <input type="number" class="form-control" id="nbOfUnits" name="nbOfUnits"
                                               value="{{logisticUnit.nbOfUnits}}" disabled/>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "Creation Time"}}}</label>
                                    <div class="col-md-4">
                                        <input type="datetime" class="form-control" id="createdAt" name="createdAt" disabled
                                               value="{{logisticUnit.createdAt}}"/>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">{{{__ "Update Time"}}}</label>
                                    <div class="col-md-4">
                                        <input type="datetime" class="form-control" id="updatedAt" name="updatedAt" disabled
                                               value="{{logisticUnit.updatedAt}}"/>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="col-md-4" style="padding-left: 20%">
                                        <button id='save' type="submit" class="btn btn-primary">{{{__ "save"}}}</button>
                                    </div>

                                </div>
                            </form>
                        </div>

                    </div>
                    <div id="layers" class="tab-pane fade">
                        <div class="row">
                            <div class="col-lg-12">
                                <table id="layersTable" class="table table-bordered table-hover">
                                    <caption>{{{__ "Layers"}}}</caption>
                                    <thead>
                                    <tr>
                                        <th>{{{__ "sscc"}}}</th>
                                        <th>{{{__ "bagNo"}}}</th>
                                        <th>{{{__ "actuallWeight"}}}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {{#each layers}}
                                        <tr id="{{id}}">
                                            <td>{{sscc}}</td>
                                            <td>{{bagNo}}</td>
                                            <td>{{actualWeight}}</td>
                                        </tr>
                                    {{/each}}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">

        </div>
    </div>
</div>
{{#section 'jquery'}}
    <script src="/vendor/jquery.dataTables.min.js"></script>
    <script src="/js/logisticUnit.js"></script>
{{/section}}
