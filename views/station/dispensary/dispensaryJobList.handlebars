{{#section 'head'}}
    <link href="/vendor/jquery.dataTables.min.css" rel="stylesheet" xmlns="http://www.w3.org/1999/html">
    <link href="/stylesheets/formStyle.css" rel="stylesheet">
{{/section}}
<div class="container main">
    <header class="row">
        <div class="col-lg-3">
            <label id="error"></label>
        </div>
        <div class="col-lg-6">
            <h2 class="title-Detail">{{{__ "Dispensary Job List"}}}</h2>
        </div>
        <div class="col-lg-3">

        </div>
    </header>
    <div class="row">
        <div class="col-lg-3">
            <div class="row">
                <div class="col-lg-12">
                    <label class="col-md-2 control-label">{{{__ "Informations: "}}}</label>
                    <br>
                    <br>
                    <ul id="infos" class="info">

                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <label class="col-md-2 control-label">{{{__ "Errors"}}}</label>
                    <br>
                    <br>
                    <ul id="errors" class="error">

                    </ul>
                </div>
            </div>

        </div>
        <div class="col-lg-6 details">
            <div class="">
                <ul id="navBar" class="nav nav-pills">
                    <li class="active"><a data-toggle="pill" href="#disJobs">{{{__ "Dispensary jobs "}}}</a></li>
                    <li><a data-toggle="pill" href="#stock">{{{__ "Stock"}}}</a></li>
                </ul>

                <div class="tab-content">
                    <div id="disJobs" class="tab-pane fade in active">
                        <table id="disJobsTable" class="table table-bordered table-hover">
                            <caption>{{{__ "Dispensary job Management"}}}</caption>
                            <thead>
                            <tr>
                                <th>{{{__ "JobIdent"}}}</th>
                                <th>{{{__ "State"}}}</th>
                                <th>{{{__ "TargetWeight"}}}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each dispensaryJobs}}
                                <tr id="{{id}}">
                                    <td><a href="/station/dispensary/dispensaryJobDetail/:{{id}}">{{jobIdent}}</a></td>
                                    <td>{{state}}</td>
                                    <td>{{targetWeight}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div id="stock" class="tab-pane fade">
                        <div class="row">
                            <div class="col-lg-12">
                                <table id="stockTable" class="table table-bordered table-hover">
                                    <caption>{{{__ "Stock"}}}</caption>
                                    <thead>
                                    <tr>
                                        <th>{{{__ "Ident"}}}</th>
                                        <th>{{{__ "ProductIdent"}}}</th>
                                        <th>{{{__ "UnitSize"}}}</th>
                                        <th>{{{__ "NbOfUnits"}}}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {{#each stocks}}
                                        <tr id="{{id}}">
                                            <td>{{ident}}</td>
                                            <td>{{productIdent}}</td>
                                            <td>{{unitSize}}</td>
                                            <td>{{nbOfUnits}}</td>
                                        </tr>
                                    {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <table id="layersTable" class="table table-bordered table-hover">
                                    <caption>{{{__ "logisticUnit detail"}}}</caption>
                                    <thead>
                                    <tr>
                                        <th>{{{__ "sscc"}}}</th>
                                        <th>{{{__ "bagNo"}}}</th>
                                        <th>{{{__ "actuallWeight"}}}</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <label class="col-lg-3">{{{__ "Please scan barcode to transfer"}}}</label>
                                <input id="transferBarcode" class="col-lg-6">
                                <button id="confirmTransfer" class="btn btn-primary">{{{__ "Confirm"}}}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">

        </div>
    </div>
</div>
{{#section 'jquery'}}
    <script src="/vendor/jquery.dataTables.min.js"></script>
    <script src="/js/dispensarys.js"></script>
{{/section}}
